<resources>
    <!-- Base application theme. -->
    <style name="Theme.App_fitnessTrackerfeip" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.App_fitnessTrackerfeip.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="Theme.App_fitnessTrackerfeip.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.App_fitnessTrackerfeip.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/teal_200</item>
        <item name="windowSplashScreenAnimatedIcon">
            @drawable/ic_logo_start
        </item>
        <item name="postSplashScreenTheme">@style/Theme.App_fitnessTrackerfeip.NoActionBar</item>
    </style>

    <style name="TextRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextRegular.Right">
        <item name="android:gravity">right</item>
    </style>

    <style name="TextRegular.Left">
        <item name="android:gravity">left</item>
    </style>


    <style name="TextBold" parent="TextRegular">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextSemiBold" parent="TextRegular">
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="TextLight" parent="TextRegular">
        <item name="fontFamily">@font/inter_light</item>
    </style>

    <style name="TextBold.Header">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextSemiBold.Header">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextLight.Header">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAgreement" parent="TextRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextRegular.White" parent="TextRegular">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>